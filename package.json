{
  "name": "themekit-pro",
  "version": "2.0.0",
  "description": "A comprehensive, accessible, and beautiful design system for modern web applications",
  "main": "js/script.js",
  "style": "css/styles.css",
  "files": [
    "css/",
    "js/",
    "index.html",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "live-server --port=3000 --open=/index.html",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss css/styles.css -o dist/themekit-pro.css",
    "build:js": "terser js/script.js -o dist/themekit-pro.min.js --compress --mangle",
    "build:watch": "npm run build && chokidar \"css/**/*.css\" \"js/**/*.js\" -c \"npm run build\"",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "http-server -p 8080 -c-1",
    "docs": "typedoc --out docs js/script.js",
    "release": "standard-version",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dnoice/ThemeKit-Pro.git"
  },
  "keywords": [
    "css",
    "design-system",
    "ui-components",
    "theme",
    "responsive",
    "accessibility",
    "dark-mode",
    "light-mode",
    "custom-properties",
    "css-variables",
    "frontend",
    "web-components",
    "javascript",
    "typescript",
    "sass",
    "scss",
    "tailwind",
    "bootstrap",
    "material-design",
    "chakra-ui"
  ],
  "author": {
    "name": "ThemeKit Pro Team",
    "email": "team@themekit-pro.com",
    "url": "https://github.com/dnoice/ThemeKit-Pro"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dnoice/ThemeKit-Pro/issues"
  },
  "homepage": "https://dnoice.github.io/ThemeKit-Pro/",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.15",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "http-server": "^14.1.1",
    "live-server": "^1.2.2",
    "postcss": "^8.4.27",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.0",
    "standard-version": "^9.5.0",
    "terser": "^5.19.2",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "postcss": "^8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/dnoice"
  }
}
